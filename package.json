{
  "name": "vitalwatch-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "VitalWatch AI - Remote Patient Monitoring Platform (Monorepo)",
  "author": "Haven Technologies Inc",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "workspaces": [
    "vitalwatch-frontend",
    "vitalwatch-backend"
  ],
  "scripts": {
    "dev": "npm run dev:backend & npm run dev:frontend",
    "dev:frontend": "npm run dev --workspace=@vitalwatch/frontend",
    "dev:backend": "npm run start:dev --workspace=@vitalwatch/backend",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=@vitalwatch/frontend",
    "build:backend": "npm run build --workspace=@vitalwatch/backend",
    "start:frontend": "npm run start --workspace=@vitalwatch/frontend",
    "start:backend": "npm run start:prod --workspace=@vitalwatch/backend",
    "lint": "npm run lint --workspaces",
    "lint:frontend": "npm run lint --workspace=@vitalwatch/frontend",
    "lint:backend": "npm run lint --workspace=@vitalwatch/backend",
    "test": "npm run test --workspace=@vitalwatch/backend",
    "test:e2e": "npm run test:e2e --workspace=@vitalwatch/backend",
    "test:cov": "npm run test:cov --workspace=@vitalwatch/backend",
    "format": "npm run format --workspace=@vitalwatch/backend",
    "db:generate": "npm run db:generate --workspace=@vitalwatch/backend",
    "db:migrate": "npm run db:migrate --workspace=@vitalwatch/backend",
    "db:push": "npm run db:push --workspace=@vitalwatch/backend",
    "db:studio": "npm run db:studio --workspace=@vitalwatch/backend",
    "docker:dev": "docker compose -f docker-compose.yml up -d",
    "docker:dev:down": "docker compose -f docker-compose.yml down",
    "docker:dev:full": "docker compose -f docker-compose.yml --profile full-stack up -d",
    "docker:prod": "docker compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker compose -f docker-compose.prod.yml down",
    "clean": "rimraf vitalwatch-frontend/node_modules vitalwatch-backend/node_modules node_modules",
    "postinstall": "npm run db:generate || true"
  }
}
